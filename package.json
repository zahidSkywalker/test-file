{
  "name": "reseller-ecommerce",
  "version": "1.0.0",
  "description": "Modern reselling e-commerce platform with professional UI/UX",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify",
    "build:watch": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "seed": "node seed.js",
    "vercel-build": "npm run build:css",
    "postinstall": "npm run build:css"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "framer-motion": "^12.23.12",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.4",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "ecommerce",
    "reselling",
    "marketplace",
    "modern"
